pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out from Git...'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the application...'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing the application...'
            }
        }
    }
}
